@page
@using TP2.Models;
@model TP2.Pages.IndexModel
@{
    ViewData["Title"] = "Acceuil";
}
@inject IViewLocalizer ViewLocalizer

<div class="container cnt-accueil">
    <h4 style="text-align:center">@ViewLocalizer["Titre"]</h4>
    <vc:pub date="2022/12/25" message="@ViewLocalizer["Pub"].Value"></vc:pub>
    <div class="row">
        @foreach (Planète item in Model.Planètes!)
        {
            <div class="col-xl-3 col-lg-4 col-md-6">
                <img class="image-planete" src="data:Planètes[@item.ID - 1].Image.Type;base64,@Convert.ToBase64String(Model.Planètes[@item.ID - 1].Image.Data!)" />
                <h4 style="text-align:center"><a asp-page="/Planetes/Details" asp-route-noplanète="@item.ID">@item.Nom</a></h4>
                <p>@item.Résumé</p>
            </div> 
        }
    </div>
</div>